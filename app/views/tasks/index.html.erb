<h1>Todo List</h1>

<table>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><i class="fa fa-<%= task.done == true ? "check-" : "" %>square"></i></td>
      <td><%= link_to "detail", task_path(task) %></td>
      <td><%= link_to "edit", edit_task_path(task) %></td>
      <td>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete '#{task.name}'?" } do %><i class="fa fa-trash-o" ></i><% end %>
      </td>
    </tr>
  <% end %>
</table>

<div><%= link_to "NEW TASK", new_task_path, class: "btn btn-primary" %></div>

